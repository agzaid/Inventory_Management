@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error</h1>
<h2 class="text-danger">@ViewData["ErrorMessage"]</h2>

@if (ViewData["ExceptionPath"] != null)
{
    <p><strong>Path:</strong> @ViewData["ExceptionPath"]</p>
    <p><strong>Message:</strong> @ViewData["ExceptionMessage"]</p>
}

@if (Model.ShowRequestId)
{
    <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
}
