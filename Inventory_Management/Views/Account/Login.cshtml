@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="card shadow-lg border-0 rounded-4 p-2" style="max-width: 400px; width: 100%;">
        <div class="card-body">
            <h3 class="text-center mb-4 fw-bold text-primary">Login</h3>

            <form method="post" asp-action="Login">
                <!-- Email -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Email/Phone number</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input type="text" name="identifier" placeholder="Enter your email" class="form-control" required />
                    </div>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input type="password" name="password" placeholder="Enter your password" class="form-control" required />
                    </div>
                </div>

                <!-- Remember Me + Forgot -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="rememberMe" />
                        <label class="form-check-label" for="rememberMe">Remember Me</label>
                    </div>
                    <a href="/Account/ForgotPassword" class="text-decoration-none small text-primary">Forgot Password?</a>
                </div>

                <!-- Login Button -->
                <button type="submit" class="btn btn-primary w-100 fw-bold rounded-pill">Login</button>

                <!-- Divider -->
                <div class="text-center my-3 text-muted">or</div>

                <!-- Register Link -->
                <a href="/Account/Register" class="btn btn-outline-secondary w-100 fw-semibold rounded-pill">
                    Create New Account
                </a>
            </form>
        </div>
    </div>
</div>
