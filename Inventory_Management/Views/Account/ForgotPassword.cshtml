@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 400px; width: 100%;">
        <div class="card-body">
            <h3 class="text-center mb-4 fw-bold text-primary">Forgot Password</h3>
            <form asp-action="ForgotPassword" method="post">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Email</label>
                    <input type="email" name="email" class="form-control" required placeholder="Enter your email" />
                </div>
                <button type="submit" class="btn btn-primary w-100 fw-bold rounded-pill">
                    Send Reset Link
                </button>
            </form>
        </div>
    </div>
</div>
