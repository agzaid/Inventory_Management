@model Domain.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height:100vh;">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width:450px; width:100%;">
        <div class="card-body">
            <h3 class="text-center mb-4 text-primary fw-bold">Reset Your Password</h3>

            <form asp-action="ResetPassword" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold"></label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter new password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm new password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 fw-bold rounded-pill">Reset Password</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
