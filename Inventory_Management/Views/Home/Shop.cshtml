@model Domain.Models.PortalVM
<section id="feature" class="section-p1">
    @for (int i = 0; i < Model.CategoryVMs?.Count; i++)
    {
        <div class="fe-box mx-1" style="cursor:pointer;">
            <img src="img/features/f1.png" alt="">
            <h6>@Model.CategoryVMs[i].CategoryName</h6>
        </div>
    }
</section>
<section id="product1" class="section-p1">
    <h2>Featured Products</h2>
    <p>Summer Collection New Modern Design</p>
    <div class="pro-container">
        @for (int i = 0; i < Model.ProductVMs?.Count; i++)
        {
            <a asp-action="ProductDetails" asp-controller="Home" asp-route-Id="@Model.ProductVMs[i].Id">
                <div class="pro mx-1">
                    <img src="@(Model.ProductVMs[i].ListOfRetrievedImages?.Count > 0 ?Model.ProductVMs[i].ListOfRetrievedImages?[0]:"")" alt="">
                    <div class="des">
                        <span>@Model.ProductVMs[i].CategoryName</span>
                        <h5>@Model.ProductVMs[i].ProductName</h5>
                        <div class="star">
                            <i class="ri-star-fill"></i>
                            <i class="ri-star-fill"></i>
                            <i class="ri-star-fill"></i>
                            <i class="ri-star-fill"></i>
                            <i class="ri-star-fill"></i>
                        </div>
                        <h4>$@Model.ProductVMs[i].SellingPrice</h4>
                    </div>
                    <a href="#"><i class="ri-shopping-cart-2-line cart"></i></a>
                </div>
            </a>
        }
    </div>
</section>

