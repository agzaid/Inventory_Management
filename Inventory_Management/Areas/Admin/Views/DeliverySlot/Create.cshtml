                                                </div>
                                                <div class="col-12">
                                                    <label class="form-label">End Time</label>
                                                    <input class="form-control" asp-for="EndTime">
                                                    <span asp-validation-for="EndTime" class="text-danger"></span>
                                                </div>
                                                <div class="col-12">
                                                    <label class="form-label">Select AM_PM</label>
                                                    <select class="form-control" asp-for="AM_PM">
                                                        <option value="AM">AM</option>
                                                        <option value="PM">PM</option>
                                                    </select>
                                                </div>
                                                <div class="col-12">
                                                    <label class="form-label">Is Available</label>
                                                    <input type="checkbox" asp-for="IsAvailable">
                                                    <span asp-validation-for="IsAvailable" class="text-danger"></span>
                                                </div>

                                                <div class="d-flex pt-2">
                                                    <div class="form-group mx-1">
                                                        <button type="submit" class="btn btn-inverse-success">Save</button>
                                                    </div>
