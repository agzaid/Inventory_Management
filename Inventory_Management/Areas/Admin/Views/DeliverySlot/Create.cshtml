                                                                   data-getpatient="@Url.Action("GetPatient")"> *@
                                            </div>
                                            @* </div><!--end row-->
                                                </div>
                                            </div> *@
                                        </form>
                                    </div>
                                </div>
                            </div><!--end row-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>