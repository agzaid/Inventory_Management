@model Domain.Models.DeliverySlotVM

<div class="page-wrapper">
    <div class="page-content">
        <div class="row">
            <div class="col">
                <div class="card radius-10">
                    <div class="card-body p-4">
                        <h5 class="card-title">Add New Delivery Slot</h5>
                        <hr />
                        <div class="form-body mt-4">
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="border border-3 p-4 rounded">
                                        <form asp-action="Create" asp-controller="DeliverySlot" enctype="multipart/form-data">
                                            <div class="form-body mt-4">
                                                @* <div class="row">
                                                    <div class="col-lg-8">
                                                        <div class="border border-3 p-4 rounded"> *@
                                                <div class="col-12">
