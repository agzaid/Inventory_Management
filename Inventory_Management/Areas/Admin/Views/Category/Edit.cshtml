@model Domain.Models.CategoryVM

<div class="page-wrapper">
    <div class="page-content">
        <div class="row">
            <div class="col">
                <div class="card radius-10">
                    <div class="card-body p-4">
                        <h5 class="card-title">Edit Category</h5>
                        <hr />
                        <div class="form-body mt-4">
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="border border-3 p-4 rounded">
                                        <form asp-action="Edit" asp-controller="Category" enctype="multipart/form-data">
                                            <div class="form-body mt-4">
                                                @* <div class="row">
                                                    <div class="col-lg-8">
                                                        <div class="border border-3 p-4 rounded"> *@
                                                <div class="col-12">
                                                    <label class="form-label fw-semibold fw-semibold">Category Name</label>
                                                    <input class="form-control" asp-for="CategoryName">
                                                    <span asp-validation-for="CategoryName" class="text-danger"></span>

                                                </div>
                                                <div class="col-12">
                                                    <label class="form-label fw-semibold fw-semibold">Category Name Arabic</label>
                                                    <input class="form-control" asp-for="CategoryNameAr">
                                                    <span asp-validation-for="CategoryNameAr" class="text-danger"></span>

                                                </div>
                                                <div class="col-12">
                                                    <label class="form-label fw-semibold fw-semibold">Description</label>
                                                    <input class="form-control" asp-for="Description">
                                                    <span asp-validation-for="Description" class="text-danger"></span>
                                                </div>
                                                <div class="col-12">
                                                    <label class="form-label fw-semibold fw-semibold fw-semibold">Select Brands</label>
                                                    <select id="brandSelect"
                                                            asp-for="SelectedBrandIds"
                                                            asp-items="@(new SelectList(Model.AvailableBrands, "Value", "Text"))"
                                                            multiple="multiple"
                                                            class="form-select">
                                                    </select>
                                                </div>
                                                <div class="d-flex pt-2">
                                                    <div class="form-group mx-1">
                                                        <input type="submit" value="Save" class="btn btn-inverse-success col-2" style="width:auto" />
                                                    </div>
                                                    @* <div class="form-group offset-3">
                                                <input type="submit" value="حجز كشف" class="btn btn-inverse-warning col-2" formaction="@Url.Action("BookAppoitment")" style="width:auto" />
                                                </div> *@
                                                </div>
                                                @* <input type="hidden" id="url"
                                                                   data-getpatient="@Url.Action("GetPatient")"> *@
                                            </div>
                                            @* </div><!--end row-->
                                                </div>
                                            </div> *@
                                        </form>
                                    </div>
                                </div>
                            </div><!--end row-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#brandSelect').select2({
                placeholder: "Select one or more brands",
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}
